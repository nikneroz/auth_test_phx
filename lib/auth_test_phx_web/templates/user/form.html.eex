<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

  <%= label f, :encrypted_password %>
  <%= text_input f, :encrypted_password %>
  <%= error_tag f, :encrypted_password %>

  <%= label f, :reset_password_token %>
  <%= text_input f, :reset_password_token %>
  <%= error_tag f, :reset_password_token %>

  <%= label f, :reset_password_sent_at %>
  <%= time_select f, :reset_password_sent_at %>
  <%= error_tag f, :reset_password_sent_at %>

  <%= label f, :remember_created_at %>
  <%= time_select f, :remember_created_at %>
  <%= error_tag f, :remember_created_at %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
